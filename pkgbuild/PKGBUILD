# Ctlos Calamares
pkgname=calamares-dev
pkgver=3.3.0.alpha6
_pkgver=3.3.0-alpha6
pkgrel=13
pkgdesc='Distribution-independent installer framework'
arch=('i686' 'x86_64')
url="https://github.com/ctlos/calamares"
license=('LGPL')
conflicts=('calamares' 'calamares-net')

depends=('kdbusaddons5' 'kconfig5' 'kcoreaddons5' 'kiconthemes5' 'ki18n5' 'kio5' 'solid5' 'yaml-cpp' 'kpmcore' 'mkinitcpio-openswap'
         'boost-libs' 'ckbcomp' 'hwinfo' 'qt5-svg' 'polkit-qt5' 'gtk-update-icon-cache' 'plasma-framework5'
         'qt5-xmlpatterns' 'squashfs-tools' 'libpwquality' 'efibootmgr' 'icu' 'appstream-qt')

makedepends=('extra-cmake-modules' 'qt5-tools' 'qt5-translations' 'git' 'boost' 'python-jsonschema' 'python-pyaml' 'python-unidecode')

backup=('usr/share/calamares/modules/bootloader.conf'
        'usr/share/calamares/modules/displaymanager.conf'
        'usr/share/calamares/modules/initcpio.conf'
        'usr/share/calamares/modules/unpackfs.conf')

source+=("https://github.com/calamares/calamares/releases/download/v${_pkgver}/calamares-${_pkgver}.tar.gz"
         git+https://github.com/ctlos/calamares#branch=dev)

sha256sums=('SKIP'
            'SKIP')

prepare() {
    cp -a ${srcdir}/calamares/* ${srcdir}/calamares-${_pkgver}
    cp -r ${srcdir}/calamares/settings-offline.conf ${srcdir}/calamares-${_pkgver}/settings.conf
    cp -r ${srcdir}/calamares/src/modules/packages/packages-offline.conf ${srcdir}/calamares-${_pkgver}/src/modules/packages/packages.conf
    cp -r ${srcdir}/calamares/src/modules/welcome/welcome-offline.conf ${srcdir}/calamares-${_pkgver}/src/modules/welcome/welcome.conf

    rm -rf ${srcdir}/calamares
    cd ${srcdir}/calamares-${_pkgver}
    sed -i -e 's/"Install configuration files" OFF/"Install configuration files" ON/' CMakeLists.txt

    # change branding
    sed -i -e "s/default/ctlos/g" src/branding/CMakeLists.txt

}

build() {
    cd ${srcdir}/calamares-${_pkgver}

    mkdir -p build
    cd build
        cmake .. \
              -DCMAKE_BUILD_TYPE=Release \
              -DCMAKE_INSTALL_PREFIX=/usr \
              -DCMAKE_INSTALL_LIBDIR=lib \
              -DWITH_KF5DBus=OFF \
              -DBoost_NO_BOOST_CMAKE=ON \
              -DSKIP_MODULES="webview interactiveterminal initramfs \
                              initramfscfg dracut dracutlukscfg \
                              dummyprocess dummypython dummycpp \
                              dummypythonqt services-openrc services-systemd \
                              keyboardq localeq welcomeq"
        make
}

package() {
    cd ${srcdir}/calamares-${_pkgver}/build
    make DESTDIR="$pkgdir" install
    install -Dm644 "../data/calamares.desktop" "$pkgdir/usr/share/applications/calamares.desktop"
    install -Dm755 "../data/calamares_polkit" "$pkgdir/usr/bin/calamares_polkit"
    install -Dm644 "../data/49-nopasswd-calamares.rules" "$pkgdir/etc/polkit-1/rules.d/49-nopasswd-calamares.rules"
    chmod 750 "$pkgdir"/etc/polkit-1/rules.d

    cp -r ../settings-{on,off}line.conf $pkgdir/usr/share/calamares/
    cp -r ../src/modules/packages/packages-{on,off}line.conf $pkgdir/usr/share/calamares/modules/
    cp -r ../src/modules/welcome/welcome-{on,off}line.conf $pkgdir/usr/share/calamares/modules/
    cp -r ../src/modules/netinstall/netinstall.yaml $pkgdir/usr/share/calamares/modules/netinstall.yaml
}
